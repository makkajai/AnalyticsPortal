<link href="Content/forms.css" rel="stylesheet" />
@inherits ViewPage

@{
    ViewBag.Title = "Register";
}

<form id="registration" action="/register" class="form-signin">
    <h1 class="form-signin-heading">Register</h1>
    <h6 style="font-size:12px; color: #999">
        Enter your details as a parent or a teacher - you can create student logins once logged in
    </h6>
    <input type="text" name ="firstname" placeholder="First Name"/>
    <input type="text" name ="lastname" placeholder="Last Name"/>
    <input type="text" name="email" placeholder="Email Id"/>
    <input type="text" name="username" placeholder="UserName"/>
    <input type="password" name="password" placeholder="Password"/>
    <button class="btn btn-large btn-primary" type="submit">Register</button>
    <span style="margin-left: 5px">Already have an id? </span><a href="/login">Sign In</a>
</form>

<script src="Scripts/jquery-2.0.0.js"></script>
<script src="Scripts/bootstrap.js"></script>
<script type="text/javascript">
    $(function() {
        $("#registration").submit(function () {
            var url = $("#registration").attr("action");
            $.post(url, $("#registration").serialize(),
                function (data) {
                    alert(JSON.stringify(data));
                });
            return false;
        });
    });
</script>